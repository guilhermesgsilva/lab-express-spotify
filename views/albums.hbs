<div class="container">
    <div class="row">
        {{#each albums}}
            <div class="col-md-4">
                <div class="card black-background" style="width: 18rem;">
                    <img src="{{images.0.url}}" class="card-img-top" alt="{{name}} album cover">
                    <div class="card-body align-center">
                        <h5 class="card-title white-letters">{{name}}</h5>
                        <a href="/tracks/{{id}}" class="btn btn-primary green-background black-letters">View Tracks</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

